<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mcdonalds"
    tools:context="practica3.gabrielosorio.com.practica3actividades.MainActivity"    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:text="DATOS DEL USUARIO:"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal|top" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user"
            android:layout_gravity="center_horizontal|top"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario:"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eName"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eMail"
            android:textColor="@color/white"/>
    </LinearLayout>

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contenedorPrincipal"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/contenedorFrame">
        </FrameLayout>

        <ListView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/menuIzq"
            android:choiceMode="singleChoice"
            android:foregroundGravity="left"
            android:layout_gravity="start">
        </ListView>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
